<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="studentlibrary.ctz.com.studentlibrary_new">

    <uses-sdk android:minSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/new_logo"
        android:label="Student Library"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activity_drawer_main"
            android:label="Student Library"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity_civil_main"
            android:label="Civil Engineering" />
        <activity
            android:name=".Activity_computer"
            android:label="Computer Technology" />
        <activity
            android:name=".Activity_Result"
            android:label="Documents" />
        <activity android:name=".Activity_fragment" />
        <activity
            android:name=".Activity_mechanical"
            android:label="Mechanical Engineering" />
        <activity
            android:name=".Activity_electrical"
            android:label="Electrical Engineering" />
        <activity
            android:name=".Activity_firstYear"
            android:label="First Year" />
        <activity
            android:name=".Activity_information"
            android:label="Information Technology" />
        <activity
            android:name=".Activity_electronics"
            android:label="Electronics Engineering" />
        <activity
            android:name=".Activity_elec_tele"
            android:label="Electronic and Telecommunication" />
        <activity
            android:name=".Activity_splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity_about_us"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Activity_fragment_grid" />
        <activity
            android:name=".Activity_credit"
            android:label="@string/title_activity_credit"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity_dev"
            android:label="Developer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity_webview"
            android:label="Documents" />
        <activity android:name=".Activity_dialog" />
        <activity
            android:name=".Result_Main"
            android:label="Document" />
        <!-- Firebase Notifications -->
        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <!-- ./Firebase Notifications -->
        <activity android:name=".Activity_NotificationHold"
            android:label="Noyifications"></activity>
    </application>

</manifest>