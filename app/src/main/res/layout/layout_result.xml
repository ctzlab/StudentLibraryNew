<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="studentlibrary.ctz.com.studentlibrary_new.Activity_Result">
    <TextView
        android:id="@+id/tv_home"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:text="E S E    P A P E R S"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="#FFF"
        android:elevation="5dp"
        android:background="#3E6680"
        android:layout_height="60dp" />
    <LinearLayout
        android:id="@+id/ll_result_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:visibility="gone"
        android:orientation="vertical">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_warning"
        android:layout_gravity="center"
        android:padding="4dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/resultTV"
        android:padding="20dp"
        android:visibility="visible"
        android:textColor="#34A853"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Sorry!\n\nSomething went wrong!\n\nor the resources might not available for this subject\n\nwe're working on getting this fixed as soon as possible"
        android:textSize="20sp"/>
        <Button
            android:id="@+id/goback_button"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:text="Go Back"
            android:layout_marginTop="30dp"
            android:textColor="#FFF"
            android:background="#34A853"/>
    </LinearLayout>


    <ListView
        android:id="@+id/listview_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        >


    </ListView>

    <WebView
        android:id="@+id/downloader"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="gone"></WebView>

</LinearLayout>
