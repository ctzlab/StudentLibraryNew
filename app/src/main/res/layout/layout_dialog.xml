<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    tools:context="studentlibrary.ctz.com.studentlibrary_new.Activity_dialog">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#eaeaea"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_dialog_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:background="@drawable/letter_m" />

        <TextView
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:gravity="left"
            android:text="SE Papers"
            android:textSize="24sp" />


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:background="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#eaeaea"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"></LinearLayout>


    <LinearLayout
        android:layout_marginBottom="5dp"
        android:id="@+id/ll_dialog_2"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:background="@drawable/letter_e" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:gravity="left"
            android:textSize="24sp"

            android:text="SE Papers"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/arrow_right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#eaeaea"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"></LinearLayout>

    <LinearLayout

        android:id="@+id/ll_dialog_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="4dp"
            android:background="@drawable/letter_s" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".7"
            android:gravity="left"
            android:textSize="24sp"
            android:text="tudy Material"/>


        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/arrow_right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="#eaeaea"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="50dp"></LinearLayout>


</LinearLayout>
